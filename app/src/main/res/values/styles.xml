<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/bg_start_page</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 网络加载等待动画（自定义dialog的样式） -->
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--菜单条目文字-->
    <style name="menu_item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x80</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">@drawable/menu_text_selector</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">@dimen/x22</item>
        <item name="android:paddingLeft">@dimen/x20</item>
    </style>

    <!-- 横向线条 -->
    <style name="horizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:background">@color/lineBackground</item>
    </style>

    <!-- 横向线条 -->
    <style name="verticalLine">
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lineBackground</item>
    </style>

    <style name="detail_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_detail_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/detail_text_selector</item>

    </style>

    <style name="main_search_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/x25</item>
        <item name="android:layout_marginLeft">@dimen/x25</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="main_search_edittext_style">
        <item name="android:layout_width">@dimen/x400</item>
        <item name="android:layout_height">@dimen/x60</item>
        <item name="android:layout_marginTop">@dimen/x19</item>
        <item name="android:layout_marginLeft">@dimen/x25</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/x14</item>
        <item name="android:paddingLeft">@dimen/x24</item>
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:background">@drawable/bg_edit_text_bg</item>
    </style>

    <style name="autoFillStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="referenceItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/y60</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/whiteBackground</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="referenceText1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/y60</item>
        <item name="android:layout_marginLeft">@dimen/x36</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="referenceText2">
        <item name="android:layout_marginLeft">@dimen/x200</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/x320</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/y60</item>
        <item name="android:textColor">@color/textAggravating</item>
    </style>

    <style name="referenceText3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/y60</item>
        <item name="android:layout_marginRight">@dimen/x36</item>
        <item name="android:maxWidth">@dimen/x150</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/textOrange</item>
    </style>

    <style name="expandableListChildItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y60</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="expandableListChildItem1" parent="expandableListChildItem">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="expandableListChildItem2" parent="expandableListChildItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="filloutItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">@dimen/x100</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="filloutItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="filloutItemEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <!--ImageView-->
    <style name="filloutImageStyle">
        <item name="android:layout_width">@dimen/x30</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>



    <!-- 弹出框风格 -->
    <style name="dialog_normal_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_left_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:text">"取消"</item>
        <item name="android:textColor">@color/dialog_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_right_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:text">确定</item>
        <item name="android:textColor">@color/dialog_button_ensure</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_cutting_line_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/dialog_cutting_line</item>
    </style>


    <style name="BottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="BottomDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>


    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!--失去焦点的时候-->
        <item name="colorControlNormal">@color/transparent</item>
        <!--获取焦点的时候-->
        <item name="colorControlActivated">@color/dialog_button_ensure</item>
    </style>




</resources>
