<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/y30"
              android:background="#00000000"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="@dimen/y600">

        <Button
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/x65"
            android:layout_height="@dimen/x65"
            android:background="@drawable/ic_close_dialog_selector"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/y45"
            />

        <Button
            android:id="@+id/dialog_submit"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y80"
            android:text="提交理由"
            android:textColor="@color/textAggravating"
            android:background="@drawable/ic_dialog_reason_selector"
            android:layout_marginBottom="@dimen/x32"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/dailog_reason"
            android:layout_width="@dimen/x685"
            android:layout_height="@dimen/y453"
            android:background="@drawable/bg_edit_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>