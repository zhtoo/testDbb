<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundGrey"
            android:orientation="vertical"
            android:scrollIndicators="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundGrey"
        android:orientation="vertical">

        <View style="@style/horizontalLine"
            android:layout_marginTop="@dimen/y10"/>

        <LinearLayout
            style="@style/filloutItemLayout">

            <TextView
                android:id="@+id/lender_live_address"
                android:text="居住地址："
                style="@style/filloutItemText"/>

            <View style="@style/autoFillStyle"/>

            <EditText
                android:id="@+id/lender_live_address_edit"
                android:hint="小箭头"
                style="@style/filloutItemEdit"/>

        </LinearLayout>

        <View style="@style/horizontalLine"
            android:layout_marginLeft="@dimen/y22"/>

        <LinearLayout style="@style/filloutItemLayout">

            <TextView
                android:id="@+id/lender_live_street"
                android:text="街道："
                style="@style/filloutItemText"/>

            <View style="@style/autoFillStyle"/>

            <EditText
                android:id="@+id/lender_live_street_edit"
                android:hint="乡镇/街道/小区/楼"
                style="@style/filloutItemEdit"/>

        </LinearLayout>

        <View style="@style/horizontalLine"/>

        <View style="@style/horizontalLine"
            android:layout_marginTop="@dimen/y10"/>

        <LinearLayout
            style="@style/filloutItemLayout">

            <TextView
                android:id="@+id/lender_support_number"
                android:text="供养人数："
                style="@style/filloutItemText"/>

            <View
                style="@style/autoFillStyle"/>

            <EditText
                android:id="@+id/lender_support_number_edit"
                android:hint="请输入人数"
                style="@style/filloutItemEdit"/>

            <TextView
                android:text="人"
                style="@style/filloutItemText"/>

        </LinearLayout>

        <View style="@style/horizontalLine"/>


    </LinearLayout>
</ScrollView>