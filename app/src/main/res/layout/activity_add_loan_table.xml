<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_lender_information"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="贷款人信息"/>

                    <View style="@style/verticalLine"/>

                    <TextView
                        android:id="@+id/add_the_loans"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="贷款事项"/>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_contact_information"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="联系人信息"/>

                    <View style="@style/verticalLine"/>

                    <TextView
                        android:id="@+id/add_investigation_and_opinion"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="客户调查情况及意见"/>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:gravity="center"
                android:text="补充以下资料完善信息录入"
                android:textSize="@dimen/x28"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View style="@style/horizontalLine"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_lender_information_optional"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="贷款人信息-选填"/>

                    <View style="@style/verticalLine"/>

                    <TextView
                        android:id="@+id/add_mutual_lender_information"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="共同贷款人信息"/>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_car_information"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="车辆信息"/>

                    <View style="@style/verticalLine"/>

                    <TextView
                        android:id="@+id/add_internet_information"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="互联网信息"/>

                </LinearLayout>

                <View style="@style/horizontalLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_upload_picture"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="照片上传"/>

                    <View style="@style/verticalLine"/>

                    <TextView
                        android:id="@+id/add_upload_vidoe"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/y200"
                        android:layout_weight="1"
                        android:text="视频上传"/>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/add_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:gravity="center"
                android:text="提交"
                android:textSize="@dimen/x36"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>